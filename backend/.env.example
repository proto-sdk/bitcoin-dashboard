# Backend Server Configuration

# Server port
PORT=3000

# GitHub Personal Access Token (required)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Authentication credentials
AUTH_USERNAME=admin
# Generate password hash by running: node -e "console.log(require('crypto').createHash('sha256').update('your_password').digest('hex'))"
AUTH_PASSWORD_HASH=your_password_hash_here

# Session secret (generate random string)
SESSION_SECRET=your_random_session_secret_here

# CORS origin (set to your frontend URL in production)
CORS_ORIGIN=*

# Node environment
NODE_ENV=development
